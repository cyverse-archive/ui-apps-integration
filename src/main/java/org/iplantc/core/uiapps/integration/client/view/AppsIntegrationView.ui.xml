<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:gwt="urn:import:com.google.gwt.widget.client"
             xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:appWizardView="urn:import:org.iplantc.core.uiapps.widgets.client.view.editors"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:appsInt="urn:import:org.iplantc.core.uiapps.integration.client.view">
             
   <ui:with field="appIntStrings"
            type="org.iplantc.core.resources.client.uiapps.integration.AppIntegrationMessages"/>

    <!-- Border Layout Data -->
   <ui:with field="westMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="0"
                     bottom="0"
                     left="0" />
   </ui:with>
   <ui:with field="centerMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="0"
                     bottom="0"
                     left="0" />
   </ui:with>
   
   <ui:with field="northData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes size="30"
                     maxSize="30"/>
   </ui:with>
   <ui:with field="westData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes margins="{westMargins}"
                     size="225"
                     collapsible="true"/>
   </ui:with>
   <ui:with field="centerData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes margins="{centerMargins}" 
                     size=".45"
                     hidden="false"/>
   </ui:with>
   <ui:with field="eastData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes size=".35"
                     minSize="300"
                     split="true"
                     hidden="false"/>
   </ui:with>
   <ui:with field="southData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes size="100"
                     split="true"/>
   </ui:with>
                
    <con:BorderLayoutContainer ui:field="borderLayoutContainer">
        <!-- Toolbar -->
        <con:north layoutData="{northData}">
            <appsInt:AppIntegrationToolbar ui:field="toolbar"/>
        </con:north>
        
        <!-- Palette -->
        <con:west layoutData="{westData}">
            <gxt:ContentPanel headingText="{appIntStrings.paletteHeader}">
                <gxt:tool>
                    <button:ToolButton ui:field="paletteContextualHelpBtn"/>
                </gxt:tool>
                <appsInt:AppIntegrationPalette ui:field="palette"/>
            </gxt:ContentPanel>
        </con:west>
        
        <!-- App Builder -->
        <con:center layoutData="{centerData}">
            <appWizardView:AppTemplateWizard ui:field="wizard"/>
        </con:center>
        
        <!-- Selected Widget Properties -->
        <con:east layoutData="{eastData}">
            <con:CardLayoutContainer ui:field="eastPanel">
                <g:HTML text="Selected widget Properties panel"/>
            </con:CardLayoutContainer>
        </con:east>
        
        <!-- Command Line Preview -->
        <con:south layoutData="{southData}">
            <gxt:ContentPanel headingText="{appIntStrings.cmdLinePreviewHeader}">
                <g:HTML ui:field="cmdLinePreview"
                        wordWrap="true"/>
            </gxt:ContentPanel>
        </con:south>
    </con:BorderLayoutContainer>             
             
</ui:UiBinder> 