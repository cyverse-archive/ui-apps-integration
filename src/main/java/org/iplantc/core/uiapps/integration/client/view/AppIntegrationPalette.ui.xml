<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
	         xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client">
	<ui:style>
	   .grab {}
	
	   	@if user.agent gecko1_8 {
	   		.grab:hover {
	   			cursor: -moz-grab;
	   		}
	   		.grab:active {
	   			cursor: -moz-grabbing !important;
	   		}
	   	}
	   	
	   	@elif user.agent safari {
	   		.grab:hover {
	   			cursor: -webkit-grab;
	   		}
	   		.grab:active {
	   			cursor: -webkit-grabbing !important;
	   		}
	   	}
	   </ui:style>
    <ui:with field="icons"
             type="org.iplantc.core.resources.client.IplantResources" />
    <ui:with field="margins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="2"
                     bottom="1"
                     left="2" />
    </ui:with>
    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="childData">
        <ui:attributes margins="{margins}" />
    </ui:with>
	<con:VerticalLayoutContainer scrollMode="AUTOY">
	   
		<con:child layoutData="{childData}">
			<g:Image ui:field="group" 
			         resource="{icons.inputSection}"
			         styleName="{style.grab}" />
		</con:child>
	   <gxt:ContentPanel headingText="Files/Folders"
	                     collapsible="true"
	                     titleCollapse="true"
	                     expanded="true">
	       <con:VerticalLayoutContainer>
				<con:child layoutData="{childData}">
					<g:Image ui:field="multiFileSelector"
						     resource="{icons.inputFileMulti}"
						     styleName="{style.grab}" />
				</con:child>
				<con:child layoutData="{childData}">
					<g:Image ui:field="fileInput"
						     resource="{icons.inputFile}"
						     styleName="{style.grab}" />
				</con:child>
				<con:child layoutData="{childData}">
		            <g:Image ui:field="folderInput"
		                     resource="{icons.inputFolder}"
						     styleName="{style.grab}"/>
		        </con:child>
	       </con:VerticalLayoutContainer>
	   </gxt:ContentPanel>
	   
	   <gxt:ContentPanel headingText="Lists"
                         collapsible="true"
                         titleCollapse="true"
                         expanded="true">
            <con:VerticalLayoutContainer>
				<con:child layoutData="{childData}">
					<g:Image ui:field="singleSelect"
						     resource="{icons.inputSelectSingle}"
						     styleName="{style.grab}" />
				</con:child>
				<con:child layoutData="{childData}">
				    <g:Image ui:field="integerSelection"
				             resource="{icons.inputSelectInteger}"
						     styleName="{style.grab}"/>
				</con:child>
				<con:child layoutData="{childData}">
				    <g:Image ui:field="doubleSelection"
				             resource="{icons.inputSelectDouble}"
						     styleName="{style.grab}"/>
				</con:child>
				<con:child layoutData="{childData}">
					<g:Image ui:field="treeSelection"
						     resource="{icons.inputSelectGrouped}"
						     styleName="{style.grab}" />
				</con:child>
            </con:VerticalLayoutContainer>	   
	   </gxt:ContentPanel>
	   
	   <gxt:ContentPanel headingText="Text/Numerical Input"
                         collapsible="true"
                         titleCollapse="true"
                         expanded="true">
	       <con:VerticalLayoutContainer>
                <con:child layoutData="{childData}">
		           <g:Image ui:field="info" 
		                    resource="{icons.generalInfoText}"
						     styleName="{style.grab}" />
                </con:child>

				<con:child layoutData="{childData}">
					<g:Image ui:field="text" 
					         resource="{icons.inputTextSingle}"
						     styleName="{style.grab}" />
				</con:child>
				<con:child layoutData="{childData}">
					<g:Image ui:field="multiLineText"
						     resource="{icons.inputTextMulti}"
						     styleName="{style.grab}" />
				</con:child>
				<con:child layoutData="{childData}">
					<g:Image ui:field="flag" 
					         resource="{icons.inputCheckBox}"
						     styleName="{style.grab}" />
				</con:child>
				<con:child layoutData="{childData}">
					<g:Image ui:field="environmentVariable"
						     resource="{icons.inputEnvVar}"
						     styleName="{style.grab}" />
				</con:child>
				<con:child layoutData="{childData}">
					<g:Image ui:field="integerInput"
						     resource="{icons.inputNumberInteger}"
						     styleName="{style.grab}" />
				</con:child>
				<con:child layoutData="{childData}">
				    <g:Image ui:field="doubleInput"
				             resource="{icons.inputNumberDouble}"
						     styleName="{style.grab}"/>
				</con:child>
	       </con:VerticalLayoutContainer>
	   </gxt:ContentPanel>
	   
	   <gxt:ContentPanel headingText="Output"
                         collapsible="true"
                         titleCollapse="true"
                         expanded="true">
	       <con:VerticalLayoutContainer>
				<con:child layoutData="{childData}">
				    <g:Image ui:field="fileOutput"
				             resource="{icons.outputFileName}"
						     styleName="{style.grab}"/>
				</con:child>
				<con:child layoutData="{childData}">
				    <g:Image ui:field="folderOutput"
				             resource="{icons.outputFolderName}"
						     styleName="{style.grab}"/>
				</con:child>
				<con:child layoutData="{childData}">
				    <g:Image ui:field="multiFileOutput"
				             resource="{icons.outputMultiFile}"
						     styleName="{style.grab}"/>
				</con:child>
	       </con:VerticalLayoutContainer>
	   </gxt:ContentPanel>
	   
	   <gxt:ContentPanel headingText="Reference Genome"
	                     collapsible="true"
	                     titleCollapse="true"
	                     expanded="true">
	       <con:VerticalLayoutContainer>
	           <con:child layoutData="{childData}">
	               <g:Image ui:field="referenceGenome"
	                        resource="{icons.referenceGenome}"
						     styleName="{style.grab}"/>
	           </con:child>
	           <con:child layoutData="{childData}">
	               <g:Image ui:field="referenceSequence"
	                        resource="{icons.referenceSequence}"
						     styleName="{style.grab}"/>
	           </con:child>
	           <con:child layoutData="{childData}">
	               <g:Image ui:field="referenceAnnotation"
	                        resource="{icons.referenceAnnotation}"
						     styleName="{style.grab}"/>
	           </con:child>
	      </con:VerticalLayoutContainer>
	   </gxt:ContentPanel>
	</con:VerticalLayoutContainer>
</ui:UiBinder> 