<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:gwt="urn:import:com.google.gwt.widget.client"
             xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:appWizardView="urn:import:org.iplantc.core.widgets.client.appWizard.view">

    <!-- Border Layout Data -->
   <ui:with field="westMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="0"
                     bottom="0"
                     left="0" />
   </ui:with>
   <ui:with field="centerMargins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="0"
                     bottom="0"
                     left="0" />
   </ui:with>
   <ui:with field="northData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes size="30"
                     maxSize="30"/>
   </ui:with>
   <ui:with field="westData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes margins="{westMargins}"
                     size="175"
                     collapsible="true"
                     split="true" />
   </ui:with>
   <ui:with field="centerData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes margins="{centerMargins}" 
                     size="1"
                     hidden="false"/>
   </ui:with>
   <ui:with field="eastData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes size="175"
                     hidden="false"/>
   </ui:with>
   <ui:with field="southData"
            type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
      <ui:attributes size="30"
                     hidden="true"/>
   </ui:with>
                
    <con:BorderLayoutContainer>
        <!-- Toolbar -->
        <con:north layoutData="{northData}">
            <gxt:ContentPanel headerVisible="false">
            	<gwt:TextButton ui:field="toolSelector" text="Select Tool"></gwt:TextButton>
            </gxt:ContentPanel>
        </con:north>
        
        <!-- Palette -->
        <con:west layoutData="{westData}">
            <gxt:ContentPanel headingText="Palette">
                <g:HTML text="Palette"/>
            </gxt:ContentPanel>
        </con:west>
        
        <!-- App Builder -->
        <con:center layoutData="{centerData}">
            <gxt:ContentPanel>
	            <appWizardView:AppWizardPanel ui:field="centerPanel"/>
            </gxt:ContentPanel>
        </con:center>
        
        <!-- Selected Widget Properties -->
        <con:east layoutData="{eastData}">
            <con:CardLayoutContainer ui:field="eastPanel">
                <g:HTML text="Selected widget Properties panel"/>
            </con:CardLayoutContainer>
        </con:east>
        
        <!-- Command Line Preview -->
        <con:south layoutData="{southData}">
            <gxt:ContentPanel>
                <g:HTML text="Command line preview" />
            </gxt:ContentPanel>
        </con:south>
    </con:BorderLayoutContainer>             
             
</ui:UiBinder> 