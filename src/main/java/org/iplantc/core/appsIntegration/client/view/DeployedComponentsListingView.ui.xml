<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
    xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
    xmlns:tb="urn:import:com.sencha.gxt.widget.core.client.toolbar" 
     xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid"
     xmlns:row="urn:import:com.sencha.gxt.widget.core.client.container"
    xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form" xmlns:gwt="urn:import:com.google.gwt.widget.client">

    <ui:with
        field="cm"
        type="com.sencha.gxt.widget.core.client.grid.ColumnModel" >
    </ui:with>

    <ui:with
        field="store"
        type="com.sencha.gxt.data.shared.ListStore" >
    </ui:with>

    <ui:with
        field="middleData"
        type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" >

        <ui:attributes
            height="1"
            width="1" />
    </ui:with>

    <ui:with
        field="topData"
        type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" >

        <ui:attributes
            height="-1"
            width="1" />
    </ui:with>

    <ui:with
        field="view"
        type="com.sencha.gxt.widget.core.client.grid.GridView" >

        <ui:attributes
            forceFit="true"
            stripeRows="true" >
        </ui:attributes>
    </ui:with>

    <gxt:FramedPanel
        pixelSize="600, 300"
        ui:field="panel" >

        <row:VerticalLayoutContainer borders="true" >
            <row:child layoutData="{topData}" >
                <tb:ToolBar
                    ui:field="toolBar" >
                    <form:TextField ui:field="searchField" width="150"></form:TextField>
                    <gwt:TextButton text="Search" ui:field="searchBtn"></gwt:TextButton>
                    <gwt:TextButton text="Request New Tool" ui:field="newToolBtn"></gwt:TextButton>
                </tb:ToolBar>
            </row:child>

            <row:child layoutData="{middleData}" >
                <grid:Grid
                    borders="false"
                    cm="{cm}"
                    columnReordering="true"
                    loadMask="true"
                    store="{store}"
                    view="{view}"
                    ui:field="grid" >
                </grid:Grid>
            </row:child>
        </row:VerticalLayoutContainer>
    </gxt:FramedPanel>

</ui:UiBinder>