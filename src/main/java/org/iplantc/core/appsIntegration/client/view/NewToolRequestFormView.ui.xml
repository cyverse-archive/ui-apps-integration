<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client" xmlns:tb="urn:import:com.sencha.gxt.widget.core.client.toolbar"
	xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid"
	xmlns:row="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
	xmlns:gwt="urn:import:com.google.gwt.widget.client">

	<ui:with field="strings"
		type="org.iplantc.core.appsIntegration.client.AppIntDisplayStrings" />


	<ui:with field="margins" type="com.sencha.gxt.core.client.util.Margins">
		<ui:attributes top="8" right="8" bottom="8" left="8" />
		<ui:with field="layoutData"
			type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
			<ui:attributes margins="{margins}" />
		</ui:with>

		<ui:attributes height="-1" width="1" />
	</ui:with>
	<con:VerticalLayoutContainer ui:field="contatInfoContainer">
		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="{strings.name}">
				<form:widget>
					<form:TextField ui:field="name" allowBlank="false">
					</form:TextField>
				</form:widget>
			</form:FieldLabel>
		</con:child>

		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="{strings.email}">
				<form:widget>
					<form:TextField ui:field="email" allowBlank="false">
					</form:TextField>
				</form:widget>
			</form:FieldLabel>
		</con:child>

		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="{strings.phone}">
				<form:widget>
					<form:TextField ui:field="phone" allowBlank="true">
					</form:TextField>
				</form:widget>
			</form:FieldLabel>
		</con:child>
	</con:VerticalLayoutContainer>

	<con:VerticalLayoutContainer ui:field="toolInfoContainer">
		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="{strings.toolNameLabel}">
				<form:widget>
					<form:TextField ui:field="toolName" allowBlank="false">
					</form:TextField>
				</form:widget>
			</form:FieldLabel>
		</con:child>

		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="{strings.toolDesc}">
				<form:widget>
					<form:TextArea ui:field="toolDesc" allowBlank="false">
					</form:TextArea>
				</form:widget>
			</form:FieldLabel>
		</con:child>

		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="{strings.srcLinkPrompt}">
				<form:widget>
					<g:HorizontalPanel>
						<form:Radio ui:field="toolLink" value="true" name="toollinkUpld"
							boxLabel="Link"></form:Radio>
						<form:Radio ui:field="toolUpld" value="false" name="toollinkUpld"
							boxLabel="Upload"></form:Radio>
					</g:HorizontalPanel>
				</form:widget>
				<form:widget>
					<form:FileUploadField ui:field="binUpld"
						visible="false" name="binUpload" allowBlank="true"></form:FileUploadField>
				</form:widget>
				<form:widget>
					<form:TextField ui:field="binLink" visible="false"
						allowBlank="true"></form:TextField>
				</form:widget>

			</form:FieldLabel>
		</con:child>

		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="{strings.docLink}">
				<form:widget>
					<form:TextField ui:field="toolDoc" allowBlank="false">
					</form:TextField>
				</form:widget>
			</form:FieldLabel>
		</con:child>

		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="{strings.version}">
				<form:widget>
					<form:TextField ui:field="toolVersion" allowBlank="false">
					</form:TextField>
				</form:widget>
			</form:FieldLabel>
		</con:child>
		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="{strings.version}">
				<form:widget>
					<form:ComboBox ui:field="multiThreadCbo" allowBlank="true"
						forceSelection="true" triggerAction="AL">
					</form:ComboBox>
				</form:widget>
			</form:FieldLabel>
		</con:child>

	</con:VerticalLayoutContainer>

	<con:VerticalLayoutContainer ui:field="otherInfoContainer">
		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="Test Data">
				<form:widget>
					<form:FileUploadField name="testDataUplad"
						ui:field="testDataUpld" allowBlank="false"></form:FileUploadField>
				</form:widget>
			</form:FieldLabel>
		</con:child>


		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="{strings.cmdLineRun}">
				<form:widget>
					<form:TextArea ui:field="runInfo" allowBlank="false">
					</form:TextArea>
				</form:widget>
			</form:FieldLabel>
		</con:child>


		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="Other Data">
				<form:widget>
					<form:FileUploadField name="otherDataUplad"
						ui:field="otherDataUpld" allowBlank="false"></form:FileUploadField>
				</form:widget>
			</form:FieldLabel>
		</con:child>

		<con:child layoutData="{layoutData}">
			<form:FieldLabel text="Other Info">
				<form:widget>
					<form:TextArea ui:field="otherInfo" allowBlank="true">
					</form:TextArea>
				</form:widget>
			</form:FieldLabel>
		</con:child>
	</con:VerticalLayoutContainer>

</ui:UiBinder> 